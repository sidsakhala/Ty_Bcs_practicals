#include<stdio.h>
int main()
{
	int i,j,sum=0,n;
	int ar[20],tm[20];
	int disk;
	printf("Enter number of locations\t");
	scanf("%d",&n);
	printf("Enter Position of Head\t");
	scanf("%d",&disk);
	printf("Enter The elements of disk Queue\n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&ar[i]);
		tm[i]=disk-ar[i];
		if(tm[i]<0)
		{
			tm[i]=ar[i]-disk;
		}
		disk=ar[i];
		sum=sum+tm[i];
	}
	printf("\n Total Movement of Head: %d",sum);
	return 0;
}
	
